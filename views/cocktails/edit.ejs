<%- include('./partials/nav') %>

<a href="/libraryBar/cocktails">back</a>

<p>Welcome to <%= title %></p>


<h4>Edit cocktail </h4>

<button><a href="/cats/edit/<%= cats.id %>">Edit Cat</a></button>
<button><a href="/cats/home">Back to Cats</a></button>

    <%# update %>
    <form action="/libraryBar/editCocktail/<%= oneCocktail._id %>" method="POST">


        <form class="new-form" action="/libraryBar" method="POST">
            <label>Title:</label>

            <label>Name</label>
            <input name="name" type="text" />
            <label>Season</label>
            <input name="season" type="text" />
            <label>Description</label>
            <input name="description" type="number" />
            <label>Ingredients</label>
            <input name="ingredients" type="number" />
            <label>Instructions</label>
            <input name="method" type="number" />
            <label>Image</label>
            <input name="image" type="text" />
            <%# label>Rating (out of 5)</label> %>
            <label>Contains alcohol</label>
            <input name="hasAlcohol" type="checkbox" />
            <label>Added to list</label>
            <input name="isAdded" type="checkbox" />
            <label>add to favourite</label>

            <form class="favourite">
                <label>
                    <input type="radio" name="heart" value="1" />
                    <span class="icon">‚ù§</span>
                </label>


                <input type="submit" value="Add Movie">
            </form>

            <input type="submit" value="Add Cocktail" />
        </form>


        <%# add a comment %>
        <h2>Comments</h2>
        <form class="form-view" method="POST" action="/libraryBar<%= cocktail._id %>/comments">
            <label>Comment:</label>
            <textarea name="content"></textarea>
            <label>Rating:</label>
            <select name="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <input type="submit" value="Add Comment">
        </form>

        <% if (cocktail.comments.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Comment</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                <% cocktail.comments.forEach(function(r) { %>
                <tr>
                    <td><%= r.createdAt.toLocaleDateString() %></td>
                    <td><%= r.content %></td>
                    <td><%= r.rating %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <h5>Be the first to add a comment</h5>
        <% } %>


        <%# delete %>
        <% cocktails.forEach(function(cocktail) { %>
        <a href="/libraryBar/<%= cocktailId._id %>">
            <li>
                <%= cocktail.name %> is a <%= cocktail.season %> drink that contains <%= cocktail.hasAlcohol %>
            </li>
        </a>
        <form action="/:cocktailId/<%= cocktailId._id %>?_method=DELETE" method="POST">
            <button> delete </button>
        </form>
        <% }) %>


